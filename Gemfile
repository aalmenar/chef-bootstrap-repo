source "https://rubygems.org"

# for knife and gang
gem 'chef'
# for fetching and resolving cookbooks
gem 'berkshelf'
# for mapping out your infrastructure
gem 'spiceweasel'

# create and manage chef servers
gem 'knife-server'
# amazon ec2 knife plugin
gem 'knife-ec2'
# diffs the cookbook versions of two or more environments
gem 'knife-env-diff'
# displays role hierarchies
gem 'knife-crawl'

# you just need this everywhere
gem 'pry'
